<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/linear_gradient_background"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/register_logo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:maxWidth="173dp"
            android:layout_weight="1"
            android:src="@drawable/n_tree_icon"
            android:contentDescription="App transparent icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/to_register"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/register_text_field_email"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="210dp"
            android:hint="Email"
            android:layout_height="48dp"
            android:textColor="@color/green_dark"/>

        <EditText
            android:id="@+id/register_text_field_password"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_width="210dp"
            android:hint="Password"
            android:layout_height="48dp"
            android:textColor="@color/green_dark"/>

        <EditText
            android:id="@+id/register_text_field_nickname"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_width="210dp"
            android:hint="Nickname"
            android:layout_height="48dp"
            android:textColor="@color/green_dark"/>

        <TextView
            android:id="@+id/register_error_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/error"
            />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/attention_button"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="@string/btn_create"
            android:textColor="@color/green_dark"/>

    </LinearLayout>

</LinearLayout>